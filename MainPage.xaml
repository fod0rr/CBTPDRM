<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP1.MainPage"
             Title="Trabalho Prático 01"
             BackgroundColor="Black">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,20"
            Spacing="15"
            VerticalOptions="Center">

            <Label
                Text="Aplicação Teste"
                FontSize="32"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalOptions="Center"
                Margin="0,0,0,30"/>

            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                <Label
                    Text="ID:"
                    TextColor="White"
                    FontSize="18"
                    VerticalOptions="Center"/>
                <Entry
                    Grid.Column="1"
                    x:Name="IdEntry"
                    Placeholder="Digite seu ID"
                    BackgroundColor="White"
                    TextColor="Black"/>
            </Grid>

            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                <Label
                    Text="Pass"
                    TextColor="White"
                    FontSize="18"
                    VerticalOptions="Center"/>
                <Entry
                    Grid.Column="1"
                    x:Name="PassEntry"
                    IsPassword="True"
                    Placeholder="Digite sua senha"
                    BackgroundColor="White"
                    TextColor="Black"/>
            </Grid>

            <Button
                x:Name="OkButton"
                Text="OK"
                Clicked="OnOkButtonClicked"
                BackgroundColor="LightGray"
                TextColor="Black"
                Margin="0,20,0,0"/>

            <Button
                x:Name="LimparButton"
                Text="Limpar"
                Clicked="OnLimparButtonClicked"
                BackgroundColor="LightGray"
                TextColor="Black"/>

            <Button
                x:Name="CreditosButton"
                Text="Créditos"
                Clicked="OnCreditosButtonClicked"
                BackgroundColor="LightGray"
                TextColor="Black"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>